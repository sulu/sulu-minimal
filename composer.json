{
    "name": "sulu/sulu-minimal",
    "license": "MIT",
    "type": "project",
    "description": "The sulu content management framework",
    "require": {
        "php": "^7.1.3",
        "ext-iconv": "*",
        "twig/extensions": "^1.0",
        "symfony/config": "^3.4",
        "symfony/framework-bundle": "^3.4",
        "symfony/monolog-bridge": "^3.4",
        "symfony/monolog-bundle": "^3.1",
        "symfony/swiftmailer-bundle": "^2.6.4",
        "symfony/twig-bundle": "^3.4",
        "sensio/framework-extra-bundle": "^5.0",
        "sulu/sulu": "dev-develop",
        "dantleech/phpcr-migrations-bundle": "~1.0",
        "zendframework/zend-stdlib": "^2.3",
        "zendframework/zendsearch": "@dev",
        "massive/build-bundle": "^0.3.0",
        "jackalope/jackalope-doctrine-dbal": "^1.2.5",
        "jackalope/jackalope-jackrabbit": "^1.2.0",
        "doctrine/doctrine-fixtures-bundle": "~2.4",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-cache-bundle": "^1.1",
        "oro/doctrine-extensions": "^1.0"
    },
    "require-dev": {
        "sensio/generator-bundle": "~2.8 || ~3.0",
        "phpcr/phpcr-shell": "~1.0",
        "symfony/debug": "^3.4",
        "symfony/debug-bundle": "^3.4",
        "symfony/dotenv": "^3.4",
        "symfony/inflector": "^3.4",
        "symfony/phpunit-bridge": "^3.4",
        "symfony/var-dumper": "^3.4",
        "symfony/web-profiler-bundle": "^3.4",
        "symfony/web-server-bundle": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": [
            "@php bin/adminconsole cache:clear",
            "@php bin/websiteconsole cache:clear",
            "@php bin/adminconsole assets:install --symlink --relative",
            "Sulu\\Bundle\\MediaBundle\\Composer\\MediaScriptHandler::initBundle",
            "Massive\\Bundle\\SearchBundle\\Composer\\SearchScriptHandler::initBundle"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "post-create-project-cmd": [
            "Sulu\\Bundle\\CoreBundle\\Composer\\ScriptHandler::copyEnvDistFile",
            "Sulu\\Bundle\\CoreBundle\\Composer\\ScriptHandler::removeComposerLockFromGitIgnore",
            "Sulu\\Bundle\\CoreBundle\\Composer\\ScriptHandler::removePackageLockJsonFromGitIgnore"
        ]
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "extra": {
        "symfony-web-dir": "public",
        "symfony-bin-dir": "bin"
    }
}
